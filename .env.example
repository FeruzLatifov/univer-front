# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_BASE_URL=http://localhost:8000

# Default Locale & Available Locales
VITE_DEFAULT_LOCALE=uz
VITE_AVAILABLE_LOCALES=uz,oz,ru,en

# ============================================
# API Security Configuration
# ============================================
# API xavfsizlikni yoqish (production'da true)
VITE_API_SECURITY_ENABLED=false

# App Key va Secret (backend bilan bir xil bo'lishi kerak)
# openssl rand -hex 32 buyrug'i bilan yarating
VITE_APP_KEY=
VITE_APP_SECRET=

# Sentry Error Tracking & Performance Monitoring
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=

# Sentry Environment (production, staging, development)
VITE_SENTRY_ENVIRONMENT=production

# Performance Monitoring - Sample Rate (0.0 to 1.0)
# 1.0 = 100% of transactions are sent
# 0.2 = 20% of transactions are sent (recommended for production)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.2

# Session Replay - Sample Rate for normal sessions (0.0 to 1.0)
# 0.1 = 10% of sessions are recorded
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1

# Session Replay - Sample Rate for sessions with errors (0.0 to 1.0)
# 1.0 = 100% of sessions with errors are recorded (recommended)
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# App Version (optional, for release tracking)
VITE_APP_VERSION=1.0.0
